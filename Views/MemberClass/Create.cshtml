@model MemberClassVM

<h3>
    Are you sure you want to sign up member @Model!.Member!.FirstName @Model!.Member!.LastName
    for class @Model!.GymClass!.ClassName?
</h3>


<form asp-action="Create">
    <input type="hidden" name="memberId" value="@Model.Member.MemberId" />
    <input type="hidden" name="classId" value="@Model.GymClass.Id" />
    <input type="submit" value="Signup" class="btn btn-danger" /> |
    <a asp-action="Sign up" asp-controller="Class"
       asp-route-id="@Model!.Member!.MemberId">Don't Sign up</a>
</form>

@section Scripts{
    <script defer src="~/js/memberClassCreate.js"></script>
}