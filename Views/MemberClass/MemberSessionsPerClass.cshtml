@model IEnumerable<ClassGroupVM>
@{
    ViewData["Title"] = ViewData["Message"];
}
<h1>@ViewData["Message"]</h1>
@foreach (var item in Model)
{
    <h1>@item.ClassName</h1>
    <table class="table">
        <thead>
            <tr>
                <th>
                    First Name
                </th>
                <th>
                    Last Name
                </th>
                <th>
                    Sessions Completed
                </th>
            </tr>
        </thead>    
        <tbody>
            @foreach (var scg in item.MemberClassCompletions)
            {
                <tr>
                    <td>
                        @scg.Member!.FirstName
                    </td>
                    <td>
                        @scg.Member.LastName
                    </td>
                    <td>
                        @scg.Sessions
                   </td>
               </tr>
            }
        </tbody>
    </table>
}