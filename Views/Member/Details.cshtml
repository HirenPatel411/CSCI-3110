<h3>Classes Signed up</h3>
<table class="table">
    <thead>
        <tr>
            <th>
                Class Name
            </th>
            <th>
                Class Instructor
            </th>
            <th>
                Sessions Completed
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            @foreach (var item in Model.ClassCompletion)
            {
                <tr>
                    <td>
                        @item.Class!.ClassName
                    </td>
                    <td>
                        @item.Class!.InstructorName
                    </td>
                    <td>
                        @item.Sessions
                    </td>
                    <td>
                        <a asp-action="AssignSessions" asp-controller="MemberClass"
                            asp-route-id="@Model!.MemberId" asp-route-classId="@item.ClassId">
                            Add Sessions
                        </a> |
                        <a asp-action="delete" asp-controller="MemberClass"
                            asp-route-id="@Model!.MemberId" asp-route-classId="@item.ClassId">
                            Delete Class
                        </a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
